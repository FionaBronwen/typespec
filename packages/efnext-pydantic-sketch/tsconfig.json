{
  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "jsx": "preserve",
    "emitDeclarationOnly": true,
    "outDir": "dist",
  },
  "include": [ "src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx", "tsp-output/**/*.ts", "../emitter-framework/src/python/name-policy.ts"],
  "exclude": ["node_modules", "dist"]
}
